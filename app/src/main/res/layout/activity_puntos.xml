<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/puntos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puntos">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confettiAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:elevation="1dp"/>


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_puntos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/nueva_fuente"
        android:elevation="5dp"
        android:text="PUNTOS"
        android:textColor="#DED7D5"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/puntuacionTextView"
        app:layout_constraintStart_toStartOf="@+id/puntuacionTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puntuacionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="Tu puntuación  \nfinal es: "
        android:elevation="5dp"
        android:textColor="#009688"
        android:textColorHighlight="#D7C6C6"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/background_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintVertical_bias="0.242" />

    <Button
        android:id="@+id/button12"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="#808080"
        android:onClick="Puntos_Pregunta1"
        android:text="Reiniciar Quiz"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntuacionTextView" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#2196F3"
        android:onClick="Puntos_Menu"
        android:text="Menú"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntuacionTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>