<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/puntos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puntos">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confettiAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:elevation="1dp"/>

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/descripcion_fondo_puntos"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_puntos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nueva_fuente"
        android:elevation="5dp"
        android:text="@string/puntos_titulo"
        android:textColor="#DED7D5"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- PuntuaciÃ³n de la ronda actual -->

    <!-- Separador visual -->

    <TextView
        android:id="@+id/puntuacionRondaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:elevation="5dp"
        android:text="@string/puntuacion_ronda"
        android:textColor="#FF9800"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <View
        android:id="@+id/separador"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="24dp"
        android:background="#80FFFFFF"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puntuacionRondaTextView" />

    <!-- Puntos totales acumulados -->

    <TextView
        android:id="@+id/puntosTotalesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:elevation="5dp"
        android:text="@string/puntos_totales_acumulados"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separador" />

    <Button
        android:id="@+id/button12"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#808080"
        android:onClick="Puntos_Pregunta1"
        android:text="@string/boton_reiniciar_quiz"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntosTotalesTextView" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#2196F3"
        android:onClick="Puntos_Menu"
        android:text="@string/boton_menu"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntosTotalesTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>