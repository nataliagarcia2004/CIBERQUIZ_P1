<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pregunta4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pregunta4">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondociber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREGUNTA 4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/questionButton4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#c2b19c"
        android:text="¿Cómo se llama este plato?"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/gyozas"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/gyozas"
        app:layout_constraintTop_toBottomOf="@id/questionButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/option4.1Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empanadillas"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A3C09A"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/gyozas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/option4.2Button"
        app:layout_constraintWidth_percent="0.4"
        android:onClick="responderPregunta"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/option4.2Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gyozas"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A3C09A"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/gyozas"
        app:layout_constraintStart_toEndOf="@id/option4.1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:onClick="responderPregunta"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/option4.3Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sushi"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A3C09A"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/option4.1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/option4.4Button"
        app:layout_constraintWidth_percent="0.4"
        android:onClick="responderPregunta"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/option4.4Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pierogi"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A3C09A"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/option4.2Button"
        app:layout_constraintStart_toEndOf="@id/option4.3Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:onClick="responderPregunta"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#808080"
        android:textColor="#FFFFFF"
        android:text="Salir Quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:onClick="Pregunta4_Menu" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#D9C8A3"
        android:textColor="#FFFFFF"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="Pregunta4_Pregunta5"
        android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

